<Page
    x:Class="UWPMathGame.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#37384d">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0 20 0 0">
                <TextBlock x:ConnectionId='2' x:Name="Title" Text="MAD MATH" Foreground="White" FontWeight="ExtraBold"
                   TextWrapping="Wrap" FontSize="55" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Center"
                   TextAlignment="Center" />
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <Button x:ConnectionId='1' x:Name="btnStart" BorderBrush="#a4404e" BorderThickness="4" Background="#ee474f" Content="PLAY!"
                            HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="40 10 40 10" Foreground="White" FontWeight="ExtraBold" FontSize="50"                        Margin="0,90" Height="100" Width="250"/>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Page>

